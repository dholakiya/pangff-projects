<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:weightSum="9"
    android:layout_height="fill_parent"
    >
 <!-- 剪贴板 -->
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_weight="1.2"
    android:layout_width="0dp"
    android:weightSum="5"
    android:layout_height="fill_parent"
    >
<TableLayout
 	android:background="#EDF5FD"
 	android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="10px"
    android:layout_marginLeft="10px"
    android:layout_marginBottom="10px"
    android:layout_marginRight="10px"
    android:paddingTop="5px"
	android:paddingLeft="5px"
 	android:paddingRight="5px"
 	android:layout_weight="4">
	<TableRow>
		<ImageButton
		 android:src="@drawable/zt"
		 android:clickable="true"
		 android:id="@+id/zt"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 />
		 <TableLayout
	 	android:background="#EDF5FD"
	 	android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:paddingLeft="5px"
	 	android:paddingRight="5px">
	    <TableRow>
		<ImageButton
		 android:src="@drawable/cut"
		 android:clickable="true"
		 android:id="@+id/cut"
		 android:adjustViewBounds="true"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 />
		</TableRow>
		<TableRow>
			<ImageButton
			 android:src="@drawable/copy"
			 android:clickable="true"
			  android:id="@+id/copy"
			  android:adjustViewBounds="true"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 />
		</TableRow>
	    </TableLayout>
	</TableRow>
</TableLayout>

<TextView
 android:text="剪贴板"
 android:gravity="center_horizontal"
 android:layout_width="wrap_content"
 android:clickable="true"
 android:layout_weight="1"
 android:layout_marginLeft="60px"
 android:layout_height="0dp"
 />
</LinearLayout>

<!-- 间隔 线-->
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_marginTop="8px"
    android:layout_weight="0.1"
    android:layout_height="fill_parent"
    >
<ImageView
 android:src="@drawable/line"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 />
</LinearLayout>

 <!-- 图像 -->
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_weight="1.5"
    android:layout_width="0dp"
    android:weightSum="5"
    android:layout_height="fill_parent"
    >
<TableLayout
 	android:background="#EDF5FD"
 	android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="10px"
    android:layout_marginLeft="10px"
    android:layout_marginBottom="10px"
    android:layout_marginRight="10px"
    android:paddingTop="5px"
	android:paddingLeft="5px"
 	android:paddingRight="5px"
 	android:layout_weight="4">
	<TableRow>
		<ImageButton
		 android:src="@drawable/choose"
		 android:clickable="true"
		 android:id="@+id/choose"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 />
		 <TableLayout
	 	android:background="#EDF5FD"
	 	android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:paddingLeft="5px"
	 	android:paddingRight="5px">
		    <TableRow android:layout_gravity="left"
		              android:layout_width="wrap_content">
				<ImageButton
				 android:src="@drawable/cuts"
				 android:id="@+id/cuts"
				 android:clickable="true"
				 android:adjustViewBounds="true"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 />
			</TableRow>
			<TableRow>
				<ImageButton
				 android:src="@drawable/rechoose"
				 android:clickable="true"
				 android:adjustViewBounds="true"
				 android:id="@+id/rechoose"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 />
			</TableRow>
			<TableRow android:layout_gravity="left" 
					  android:layout_width="wrap_content">
				<ImageButton
				 android:src="@drawable/xz"
				 android:clickable="true"
				 android:id="@+id/xz"
				 android:adjustViewBounds="true"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 />
			</TableRow>
	    </TableLayout>
	</TableRow>
</TableLayout>

<TextView
 android:text="图像"
 android:gravity="center_horizontal"
 android:layout_width="wrap_content"
 android:clickable="true"
 android:layout_weight="1"
 android:layout_marginLeft="50px"
 android:layout_height="0dp"
 />
</LinearLayout>
 
 
